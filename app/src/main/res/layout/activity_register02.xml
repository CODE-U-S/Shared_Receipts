<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register02Activity">

    <ImageView
        android:layout_width="478dp"
        android:layout_height="578dp"
        android:src="@drawable/register02_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="*중복된 아이디입니다."
        android:textColor="#FF0000"
        android:textSize="13dp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="288dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="*비밀번호가 일치하지 않습니다."
        android:textColor="#FF0000"
        android:textSize="13dp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="469dp" />

    <ImageButton
        android:id="@+id/main_rbutton"
        android:layout_width="159dp"
        android:layout_height="49dp"
        android:contentDescription="이전"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/register02_next"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="662dp" />

    <ImageButton
        android:id="@+id/main_nextbutton"
        android:layout_width="161dp"
        android:layout_height="51dp"
        android:contentDescription="다음"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/register02_next"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="662dp" />


</androidx.constraintlayout.widget.ConstraintLayout>