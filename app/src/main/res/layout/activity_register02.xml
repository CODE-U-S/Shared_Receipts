<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register02Activity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/re02_imageview"
            android:layout_width="match_parent"
            android:layout_height="578dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/register02_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duplicate_id"
            android:textColor="#FF0000"
            android:textSize="13sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="288dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/password_mismatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passwords_do_not_match"
            android:textColor="#FF0000"
            android:textSize="13sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="469dp"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/main_rbutton"
            android:layout_width="159dp"
            android:layout_height="49dp"
            android:contentDescription="@string/before"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/register02_previous"
            android:layout_marginTop="662dp"
            android:layout_marginStart="37dp" />

        <ImageButton
            android:id="@+id/main_nextbutton"
            android:layout_width="161dp"
            android:layout_height="51dp"
            android:contentDescription="@string/next"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/register02_next"
            android:layout_marginTop="662dp"
            android:layout_marginStart="217dp" />

        <EditText
            android:id="@+id/name_text"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="@string/name"
            android:autofillHints="username"
            android:inputType="text"
            android:layout_marginStart="40dp"
            android:layout_marginTop="143dp" />

        <EditText
            android:id="@+id/id_text"
            android:layout_width="215dp"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="@string/id"
            android:autofillHints="username"
            android:inputType="text"
            android:layout_marginStart="40dp"
            android:layout_marginTop="232.5dp" />


        <EditText
            android:id="@+id/re02_password_text"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="@string/password"
            android:autofillHints="username"
            android:inputType="textPassword"
            android:layout_marginStart="40dp"
            android:layout_marginTop="352.5dp" />

        <EditText
            android:id="@+id/re02_verify_password_text"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="@string/password_verification"
            android:autofillHints="username"
            android:inputType="textPassword"
            android:layout_marginStart="40dp"
            android:layout_marginTop="411dp" />

        <EditText
            android:id="@+id/email_text"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="@string/email_hint"
            android:autofillHints="username"
            android:inputType="textEmailAddress"
            android:layout_marginStart="40dp"
            android:layout_marginTop="530dp" />

    </FrameLayout>

</ScrollView>
